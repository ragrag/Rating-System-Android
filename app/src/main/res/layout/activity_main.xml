<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f0000">


    <ImageView
        android:id="@+id/imgvw"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/ib4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="103dp"
        android:id="@+id/lnrlyout"
        android:layout_below="@+id/imgvw"
        android:layout_alignParentEnd="true"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/lnrlyout"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#fff"
            android:background="@drawable/border"
            android:padding="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="31dp"

            android:layout_marginEnd="57dp" />

        <TextView
            android:id="@+id/btn_signup"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textColor="#fff"
            android:background="@drawable/border"
            android:padding="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="43dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imgvw"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Code"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#5fff"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Password"
                android:inputType="textPassword"
                android:letterSpacing="0.1"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
